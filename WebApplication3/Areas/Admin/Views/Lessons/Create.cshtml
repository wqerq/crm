@model WebApplication3.Admin.Models.Lesson

@{
    ViewData["Title"] = "Create";
    TimeSpan[] tmp = { new TimeSpan(8, 20, 0), new TimeSpan(10, 00, 0), new TimeSpan(12, 05, 0), new TimeSpan(13, 50, 0), new TimeSpan(15, 35, 0) };
    List<SelectListItem> timeSpansList = new List<SelectListItem>();
    foreach (var timeSpan in tmp)
    {
        timeSpansList.Add(new SelectListItem() { Text = timeSpan.ToString(), Value = timeSpan.ToString() });
    }
    SelectList timeSpansSelectList = new SelectList(timeSpansList, "Value", "Text");
    ViewBag.time = timeSpansSelectList;

    DayOfWeek[] tmp2 = { DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday, DayOfWeek.Saturday };
    List<SelectListItem> timeSpansList2 = new List<SelectListItem>();
    foreach (var timeSpan in tmp2)
    {
        timeSpansList2.Add(new SelectListItem() { Text = timeSpan.ToString(), Value = timeSpan.ToString() });
    }
    SelectList timeSpansSelectList2 = new SelectList(timeSpansList2, "Value", "Text");
    ViewBag.day = timeSpansSelectList2;
}

<h1>Create</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lesson_GroupId" class="control-label"></label>
                <select asp-for="Lesson_GroupId" class ="form-control" asp-items="ViewBag.Lesson_GroupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson_ProfessorId" class="control-label"></label>
                <select asp-for="Lesson_ProfessorId" class ="form-control" asp-items="ViewBag.Lesson_ProfessorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson_SubjectId" class="control-label"></label>
                <select asp-for="Lesson_SubjectId" class ="form-control" asp-items="ViewBag.Lesson_SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lesson_RoomId" class="control-label"></label>
                <select asp-for="Lesson_RoomId" class ="form-control" asp-items="ViewBag.Lesson_RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="ViewBag.day"></select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <select asp-for="Time" class="form-control" asp-items="ViewBag.time"></select>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

